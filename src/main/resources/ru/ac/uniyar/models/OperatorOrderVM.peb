{% extends "./layout.peb" %}
{% block content %}
    <h2 class="text-center"> Заказ номер: {{ model.order.id }} </h2>
    <h3 class="text-lefT"> Контактная информация:  </h3>
    <p>Имя заказчика: {{ model.user.name }} </p>
    <p>Телефон: {{ model.user.phone }} </p>
    <p>Email: {{ model.user.email }} </p>
    <h3 class="text-left">Информация о заказе:  </h3>
    <p>Время добавления: {{ model.order.timestamp }} </p>
    <p>Ресторан: {{ model.restaurant.nameRestaurant }} </p>
    <p>Содержимое: </p>
    {% for dish in model.dishes %}
        <div>
            {{ dish.nameDish }}, {{ dish.price }} руб.
        </div>
    {% endfor %}
    <p>Сервисный сбор: 29 руб.</p>
    <p>Итоговая цена: {{ model.price }} руб.</p>
    <p>Статус: {{ model.order.status }}.</p>
    <h3 class="text-left">Статус: {{ model.order.status }}</h3>
    <form method="POST">
        <div class="grid-x grid-padding-x">
            <div class="medium-12 cell">
                    <select name = "status" >
                        <option   value="В обработке">В обработке</option>
                        <option   value="Готов">Готов</option>
                        <option   value="Отменен">Отменен</option>
                    </select >
                </label>
            </div>
        </div>
        <input type="submit" value="Изменить" class="button">
    </form>
    <div>
        <a class="button" href="/profile/orders">К списку заказов</a>
    </div>
{% endblock %}
